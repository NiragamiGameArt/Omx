#!/bin/bash

# Mapping des entrées de bouton
TRIGGER=1
THUMB=2
THUMB2=3
TOP=4

# ...

# Boucle d'écoute des entrées de bouton
while true; do
  read -r ev < /dev/input/eventX
  case $ev in
    $TRIGGER) omxplayer -o local video1.mp4 ;;
    $THUMB) omxplayer -o local video2.mp4 ;;
    $THUMB2) omxplayer -o local video3.mp4 ;;
    $TOP) omxplayer -o local video4.mp4 ;;
  esac
done